@model MVC_LIVRARIA.Models.Livro
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ficha Tecnica</h2>
<div>
    <h4>Informacoes sobre o livro</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.NumeroPaginas)
        </dt>
        <dt>
             @Html.DisplayNameFor(model => model.TemIlustra)
        </dt>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Editar ficha tecnica</a>
    <a asp-action="Index">Voltar para a listagem</a>
</div>
